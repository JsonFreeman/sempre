(rule $SENTENCE (form $PHRASE \( element ` $TOKEN ' $MODAL equal to $TOKEN \) ) (lambda w (lambda x (lambda y (lambda z (call + (string "value(") (var x) (string ",") (var z) (string ")")))))))
(rule $SENTENCE (form $PHRASE \( element ` $TOKEN ' $MODAL $NEGATION equal to $TOKEN \) ) (lambda v (lambda w (lambda x (lambda y (lambda z (call + (string "~value(") (var v) (string ",") (var z) (string ")"))))))))

