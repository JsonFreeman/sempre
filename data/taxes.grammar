# field value existence
(rule $SENTENCE ($FIELD has a value) (lambda x (call + (string "has_value(") (var x) (string ")"))))
(rule $SENTENCE ($FIELD $MODAL checked) (lambda x (lambda y (call + (string "has_value(") (var x) (string ")")))))
